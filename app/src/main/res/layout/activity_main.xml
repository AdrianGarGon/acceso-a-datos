<?xml version="1.0" encoding="utf-8"?><!-- IDEA: Crearlo con RecyclerView -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ut01.FileActivity">

        <!-- UT-01: Ficheros -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_text_ut01" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/action_ut01_ex01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_text_ut01_ex01" />

        <!-- UT-02: Almacenamiento XML -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/title_text_ut02" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/action_ut02_ex01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_text_ut02_ex01" />

        <Button
            android:id="@+id/action_ut02_ex02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_text_ut02_ex02" />

        <Button
            android:id="@+id/action_ut02_ex03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_text_ut02_ex03" />

    </LinearLayout>


</ScrollView>