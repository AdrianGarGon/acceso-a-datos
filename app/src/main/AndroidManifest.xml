<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmperezra.aad_playground">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AADPlayGround">

        <!-- UT-01: Ficheros -->
        <activity
            android:name=".ut01.FileActivity"
            android:exported="true"
            android:label="@string/title_text_ut01" />

        <!-- UT-02: Almacenamiento XML -->
        <activity
            android:name=".ut02.exercise01.Exercise01Activity"
            android:exported="true"
            android:label="@string/title_text_ut02" />

        <activity
            android:name=".ut02.exercise02.Exercise02Activity"
            android:exported="true"
            android:label="@string/title_text_ut02" />

        <activity
            android:name=".ut02.exercise03.Exercise03Activity"
            android:exported="false"
            android:label="@string/title_text_ut02" />

        <!-- Main -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>